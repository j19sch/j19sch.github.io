{#  -*- coding: utf-8 -*- #}
{% block content %}
<div id="{{ post_list_id }}" class="post-list">
    {% if posts %}
    <ul class="post-list">
        {% for post in posts %}
            <li class="post-list-item">
            <a href="{{ post.permalink(lang) }}">{{ post.title(lang) | e }}</a>
            </li>
        {% endfor %}
    </ul>
    {% endif %}
</div>
{% endblock %}